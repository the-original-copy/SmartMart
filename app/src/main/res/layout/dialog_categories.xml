<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_cereal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:background="@drawable/shape_dialog_rounded"
        android:layout_marginEnd="5dp"
        android:layout_weight="1"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/card_view_content_padding">
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dialog_list_title_padding"
                android:textColor="@color/primary_text_color"
                android:textSize="@dimen/dialog_list_title_text_size"
                android:textStyle="bold"
                android:text="Select Product Category"
                android:gravity="center"
                android:visibility="visible"
                 />
    <TextView
        android:id="@+id/tv_cereals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/add_screen_text_add_image_padding"
        android:text="Cereals"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/add_screen_text_add_image_textSize"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv_meat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/add_screen_text_add_image_padding"
        android:text="Meat"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/add_screen_text_add_image_textSize"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv_dairy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/add_screen_text_add_image_padding"
        android:text="Dairy"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/add_screen_text_add_image_textSize"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv_greens_vegetables"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/add_screen_text_add_image_padding"
        android:text="Greens and Vegetables"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/add_screen_text_add_image_textSize"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv_others"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/add_screen_text_add_image_padding"
        android:text="Other Farm Products"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/add_screen_text_add_image_textSize"
        android:textStyle="bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>